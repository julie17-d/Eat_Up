<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051905"
    tools:context=".activities.RegistrationActivity">


    <ImageView
        android:id="@+id/burg"
        android:layout_width="399dp"
        android:layout_height="729dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/burg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="620dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/age_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_white"
            android:hint="Enter your age"
            android:inputType="number"

            android:textStyle="italic" />

        <EditText
            android:id="@+id/height_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"


            android:background="@drawable/bg_white"

            android:hint="Enter your height in meters"
            android:inputType="numberDecimal"

            android:textStyle="italic" />

        <EditText
            android:id="@+id/weight_input"
            android:layout_width="match_parent"

            android:layout_height="48dp"

            android:background="@drawable/bg_white"
            android:hint="Enter your weight in Kg"
            android:inputType="numberDecimal"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="430dp"
            android:layout_marginTop="10dp"
            android:background="#5CFFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/dietary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#6BFFFFFF"
                android:text="What are your dietary restrictions?"

                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/vegan_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="#5BFFFFFF"
                android:text="Vegan"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/vegetarian_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Vegetarian"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/pescatarian_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Pescatarian"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/nut_free_checkbox"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Nut-free"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/dairy_free_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Dairy-free"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/gluten_free_checkbox"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Gluten-free"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/low_sugar_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Low-sugar"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/other_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"

                android:minHeight="48dp"
                android:text="Other"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/other_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="Specify your restriction"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/Submit"
        android:layout_width="102dp"
        android:layout_height="51dp"
        android:layout_marginStart="154dp"
        android:layout_marginBottom="16dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="231dp"
        android:layout_height="47dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="27dp"
        android:shadowColor="#8BC34A"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Formulaire"
        android:textAllCaps="true"
        android:textColor="#EFEAEA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>