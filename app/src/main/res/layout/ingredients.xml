<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_ing"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ing_image"
                android:layout_width="80dp"
                android:layout_height="98dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/peanut"
                app:tint="@color/white">


            </ImageView>

            <TextView
                android:id="@+id/ing_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="5dp"
                android:text="semi-sweet chocolate"
                android:fontFamily="@font/atma_semibold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/ing_quantity"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="125dp"
                android:text="48"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/atma_semibold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/ing_measure"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="ounces"
                android:layout_marginStart="114dp"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/atma_semibold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>